@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured
{
    <header class="main-header">
        <div class="container">
            <h1 class="page-title"></h1>

            <ol class="breadcrumb pull-right">
                <li><a href="#">Home</a></li>
                <li class="active">Contact Us</li>
            </ol>
        </div>
    </header>

    <div class="container">
        <div class="row">
            @if (ViewBag.Status == "ERROR")
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong><i class="fa fa-times"></i> Error!</strong>@ViewBag.StatusMessage
                </div>
            }
            else if (ViewBag.Status == "SUCCESS")
            {
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong><i class="fa fa-times"></i> Success!</strong> @ViewBag.StatusMessage
                </div>
            }
            
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title no-margin-top">Send Message</h2>
            </div>
            <div class="col-md-8">
                <section>
                    <p>Fill the contact form below to contact us. We would probably respond to your message within minutes via your mail address.</p>

                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label for="InputName">Name</label>
                            <input type="text" class="form-control" id="InputName" name="name">
                        </div>
                        <div class="form-group">
                            <label for="InputEmail1">Email address</label>
                            <input type="email" class="form-control" id="InputEmail1" name="mail">
                        </div>
                        <div class="form-group">
                            <label for="InputMessage">Mesage</label>
                            <textarea class="form-control" id="InputMessage" rows="8" name="message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-ar btn-primary">Submit</button>
                        <div class="clearfix"></div>
                    }
                </section>
            </div>

            <div class="col-md-4">
                <section>
                    <div class="panel panel-primary">
                        <div class="panel-heading"><i class="fa fa-envelope-o"></i>Additional Information
                        </div>
                        <div class="panel-body">
                            <h4 class="section-title no-margin-top">Contacts</h4>
                            <address>
                                <strong>GANAF Technologies</strong><br>
                                14, Erelu Omosanya Street, Off Ajagunro Road<br>
                                Imota, Ikorodu, Lagos.<br>
                                <p></p>
                                <p>OR</p>
                                <p></p>
                                APVON Office, Osogbo City Hall, Olonkoro Area<br/>
                                Osogbo, Osun State.
                                <p></p><br/>
                                <abbr title="Phone">Phone:</abbr>
                                +2348066036996, +2347061543553
                                <br>
                                Mail: <a href="#">ganaftech@gmail.com</a>
                            </address>

                            <!-- Business Hours -->
                            <h4 class="section-title no-margin-top">Business Hours</h4>
                            <ul class="list-unstyled">
                                <li><strong>Monday-Friday:</strong> 9am to 5pm</li>
                                <li><strong>Saturday:</strong> 9am to 2pm</li>
                                <li><strong>Sunday:</strong> 10am to 2pm</li>
                            </ul>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        @*<hr class="dotted">

        <section>
            <div class="well well-sm">
                <iframe width="100%" height="350" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=central%2Bpark&amp;ie=UTF8&amp;z=12&amp;t=m&amp;iwloc=near&amp;output=embed"></iframe>
            </div>
        </section>*@
    </div>
    <!-- container -->
}
