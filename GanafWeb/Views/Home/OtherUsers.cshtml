@section featured{
    <header class="main-header">
        <div class="container">
            <h1 class="page-title">Login and Register</h1>

            @*<ol class="breadcrumb pull-right">
                <li><a href="#">Pages</a></li>
                <li><a href="#">Form</a></li>
                <li class="active">Login and Register</li>
            </ol>*@
        </div>
    </header>

    <div class="container">
        <div class="row">
            @if (ViewBag.Status == "ERROR")
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong><i class="fa fa-times"></i> Error!</strong>@ViewBag.StatusMessage
                </div>
            }
            else if (ViewBag.Status == "SUCCESS")
            {
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong><i class="fa fa-times"></i> Success!</strong> @ViewBag.StatusMessage
                </div>
            }
            
        </div>
        <div class="row">
            <div class="col-md-7">
                <h2 class="section-title no-margin-top">Create Account</h2>
                <div class="panel panel-success-dark animated fadeInDown">
                    <div class="panel-heading">Register Here</div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Register", "Home"))
                        {
                            <div class="form-group">
                                <label for="InputFirstName">First Name<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputFirstName" name="firstname">
                            </div>
                            <div class="form-group">
                                <label for="InputLastName">Last Name<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputLastName" name="lastname">
                            </div>
                            <div class="form-group">
                                <label for="InputEmail">Email<sup>*</sup></label>
                                <input type="email" class="form-control" id="InputEmail" name="email">
                            </div>
                            <div class="form-group">
                                <label for="InputUserName">Phone<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputPhone" name="phone">
                            </div>

                            <div class="form-group">
                                <label for="InputUserName">User Name<sup>*</sup></label>
                                <input type="text" class="form-control" id="InputUserName" name="username">
                            </div>
                            <div class="form-group">
                                <label for="InputPassword">Password<sup>*</sup></label>
                                <input type="password" class="form-control" id="InputPassword" name="password">
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-8">
                                    <button type="submit" class="btn btn-ar btn-primary pull-right">Register</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-lg-offset-1 col-md-5">
                <h2 class="section-title no-margin-top">Are you registered?</h2>
                <div class="panel panel-primary animated fadeInDown animation-delay-2">
                    <div class="panel-heading">Login Here</div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Authenticate", "Home"))
                        {
                            <div class="form-group">
                                <div class="input-group login-input">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input type="text" name="username" class="form-control" placeholder="Username">
                                </div>
                                <br>
                                <div class="input-group login-input">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    <input type="password" name="password" class="form-control" placeholder="Password">
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-8">
                                        <button type="submit" class="btn btn-ar btn-primary pull-right">Login</button>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container  -->

}
